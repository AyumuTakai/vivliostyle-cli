{
  "name": "@vivliostyle/cli",
  "description": "Save the pdf file via Headless Chrome and Vivliostyle.",
  "version": "3.0.0",
  "author": "spring_raining <harusamex.com@gmail.com>",
  "scripts": {
    "build": "yarn clean && run-p build:*",
    "build:broker": "esbuild --bundle broker/main.js --outfile=broker/dist/bundle.js",
    "build:cli": "tsc && shx chmod +x dist/cli.js",
    "build:copy-vivliostyle-resources": "shx cp -r node_modules/@vivliostyle/core/resources broker/thirdparty/vivliostyle-resources",
    "build:copy-mathjax": "shx cp -r node_modules/mathjax broker/thirdparty/mathjax",
    "generate:schema": "run-p generate:schema:*",
    "generate:schema:pubManifest": "json2ts -i src/schema/pubManifest/publication.schema.json -o src/schema/pubManifest.d.ts --cwd src/schema/pubManifest",
    "generate:schema:vivliostyleConfig": "json2ts -i src/schema/vivliostyle.config.schema.json -o src/schema/vivliostyle.config.d.ts --cwd src/schema",
    "clean": "shx rm -rf dist tmp broker/dist",
    "dev": "run-p dev:*",
    "dev:broker": "nodemon -w broker -i broker/dist --exec 'esbuild --bundle --outfile=broker/dist/bundle.js broker/main.js'",
    "dev:cli": "tsc -w --preserveWatchOutput",
    "example": "yarn --cwd example build",
    "pretest": "yarn build",
    "release": "release-it",
    "release:pre": "release-it --preRelease --npm.tag=next",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@vivliostyle/core": "2.5.0",
    "@vivliostyle/vfm": "v1.0.0-alpha.17",
    "ajv": "^7.0.4",
    "ajv-formats": "^1.5.1",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0-rc.5",
    "chokidar": "^3.5.1",
    "commander": "^7.1.0",
    "debug": "^4.3.1",
    "fast-xml-parser": "^3.18.0",
    "globby": "^11.0.2",
    "hast-util-to-html": "^7.1.2",
    "hastscript": "^6.0.0",
    "image-size": "^0.9.4",
    "mime-types": "^2.1.29",
    "node-stream-zip": "^1.13.2",
    "ora": "^5.3.0",
    "pdf-lib": "^1.16.0",
    "preact": "^10.5.12",
    "press-ready": "^4.0.3",
    "prettier": "^2.2.1",
    "puppeteer": "7.0.1",
    "resolve-pkg": "^2.0.0",
    "sass": "^1.30.0",
    "serve-handler": "^6.1.3",
    "shelljs": "^0.8.4",
    "terminal-link": "^2.1.1",
    "tmp": "^0.2.1",
    "to-vfile": "^6.1.0",
    "upath": "^2.0.1",
    "uuid": "^8.3.2",
    "vfile": "^4.2.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^2.0.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.20",
    "@types/jsdom": "^16.2.6",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.31",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^8.3.0",
    "esbuild": "^0.8.53",
    "execa": "^5.0.0",
    "file-type": "^16.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "json-schema-to-typescript": "^10.1.3",
    "lint-staged": "^10.5.4",
    "mathjax": "3.1.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier-plugin-organize-imports": "^1.1.1",
    "pretty-quick": "^3.1.0",
    "release-it": "^14.4.1",
    "shx": "^0.3.3",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "bin": {
    "vivliostyle": "dist/cli.js",
    "vs": "dist/cli.js"
  },
  "files": [
    "broker",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/vivliostyle/vivliostyle-cli.git",
  "bugs": "https://github.com/vivliostyle/vivliostyle-cli/issues",
  "homepage": "https://github.com/vivliostyle/vivliostyle-cli",
  "keywords": [
    "vivliostyle"
  ],
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=10 <=12 || >=14.1.0"
  }
}
